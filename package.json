{
  "name": "time-blocking-app",
  "version": "1.0.0",
  "description": "A simple desktop app for time-blocking your day",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "tsc -p tsconfig.main.json && concurrently \"vite --host\" \"wait-on http://localhost:5173 && electron . --dev\"",
    "build": "tsc -p tsconfig.main.json && vite build",
    "start": "electron ."
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
