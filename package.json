{
  "name": "time-blocking-app",
  "version": "1.0.0",
  "description": "A simple desktop app for time-blocking your day",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "tsc -p tsconfig.main.json && concurrently \"vite --host\" \"wait-on http://localhost:5173 && electron . --dev\"",
    "build": "tsc -p tsconfig.main.json && vite build",
    "start": "electron .",
    "pack": "npm run build && electron-builder --win nsis",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "jsdom": "^28.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.timeblocking.app",
    "productName": "TimeBlocker",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
